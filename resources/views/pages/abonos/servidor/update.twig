{% extends 'layouts/painel/index.twig' %}
{% block content %}

    <form class="form-ajax" data-redirect="{{ APP_URL }}/abonos/visualizar/{{ abono.id_abono }}" autocomplete="off">
        <div class="container-fluid p-0">
            <div class="page-title-box">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <h4 class="page-title">Responder Solicitação de Abono</h4>
                    </div>
                    <div class="col-sm-6">
                        <div class="float-right d-none d-md-block">
                            <button type="submit" class="btn btn-primary waves-effect waves-light">
                                <i class="fa fa-paper-plane"></i>
                                Enviar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="page-content">
                <div class="row">
                    <div class="col-lg-12">
                        <p class="msg"></p>
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#tab1" role="tab" aria-selected="true">Solicitação</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane p-3 active" id="home" role="tabpanel">
                                <div class="form-group">
                                    <label>Data</label>
                                    <input type="date" class="form-control col-md-4" value="{{ abono.data_abono }}" disabled>
                                </div>
                                
                                <div class="form-group">
                                    <label>Período</label>
                                    <input type="text" class="form-control col-md-3" value="{{ abono.periodo_abono  == 'M' ? 'MATUTINO' : abono.periodo_abono  == 'V' ? 'VESPERTINO' : 'INTEGRAL' }}" disabled>
                                </div>

                                <div class="form-group">
                                    <label>Motivo Anterior</label>
                                    <textarea rows="3" class="form-control" disabled>{{ abono.motivo_abono }}</textarea>
                                </div>
                                <div class="form-group">
                                    <label>Motivo {{ OBRIGATORIO }}</label>
                                    <textarea name="motivo_resposta_abono" rows="3" class="form-control" required="required" maxlength="500"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
